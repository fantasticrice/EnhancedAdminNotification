<?xml version="1.0"?>
<config>
	<sections>
		<system>
			<groups>
				<adminnotification module="adminnotification">
					<fields>
						<allow_modal translate="label">
							<label>Allow Modal Notifications</label>
							<frontend_type>multiselect</frontend_type>
							<can_be_empty/>
							<source_model>rice_enhancedadminnotification/system_config_source_notification_severity</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</allow_modal>
						<hide_notices translate="label">
							<label>Suppress Notices</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>Severity: Notice messages will automatically be marked as read.</comment>
							<sort_order>11</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</hide_notices>
					</fields>
				</adminnotification>
			</groups>
		</system>
	</sections>
</config>