<?xml version="1.0"?>
<config>
	<global>
		<blocks>
			<adminhtml>
				<rewrite>
					<notification_window>Rice_EnhancedAdminNotification_Block_Adminhtml_Notification_Window</notification_window>
				</rewrite>
			</adminhtml>
		</blocks>
		<models>
			<rice_enhancedadminnotification>
				<class>Rice_EnhancedAdminNotification_Model</class>
			</rice_enhancedadminnotification>
			<adminnotification_resource>
				<rewrite>
					<inbox>Rice_EnhancedAdminNotification_Model_Resource_Inbox</inbox>
				</rewrite>
			</adminnotification_resource>
		</models>
	</global>

	<default>
		<system>
			<adminnotification>
				<allow_modal>1,2,3,4</allow_modal>
			</adminnotification>
		</system>
	</default>
</config>